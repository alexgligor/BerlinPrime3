@page "/posleadpage"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@inject IGenericService<Device> deviceService
@inject IGenericService<Site> siteService
<div>
    <h2>Mesaj de Informare</h2>
    <p>Acesta este un mesaj de informare pentru utilizatori.</p>

    <button class="btn btn-primary" @onclick="()=>Finis(Environment.MachineName)">Mergi la Selectare Utilizator</button>
</div>

@if (showModal)
{
    <div class="modal-backdrop align-content-center p-5">
        <div class="modal-content rounded-4">
            <div class="modal-header border-bottom-0">
                <h1 class="modal-title fs-5">Selectare locatia in care te afli:</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" @onclick="()=>showModal=false" aria-label="Close"></button>
            </div>
            <div class="modal-footer d-block">
                <div class="row overflow-auto" id="UsersId">
                    @foreach (var u in sites)
                    {
                        <div class="col-md-2 d-block align-items-center justify-content-center text-center" @onclick="()=>Select(u,Environment.MachineName)" style="cursor: pointer;">
                            @if (u != null)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16" >
                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                </svg>

                                <h2><bold>@u.Title</bold></h2>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    public bool showModal { get; set; } = false;
    public List<Site> sites { get; set; } = new List<Site>();

    async void Finis(String machineName)
    {
        var devices = await deviceService.FindAll(d=>d.Title == machineName);
        if (devices.Count == 0)
        {
            if (sites.Count == 0)
                sites = await siteService.GetAll();

            showModal = true;
            StateHasChanged();
            return;
        }

        NavigationManager.NavigateTo($"/userselect/{machineName}");
    }

    async void Select(Site site, string machineName)
    {
        await deviceService.Add(new Device() { Title = machineName, Site = site });

        NavigationManager.NavigateTo($"/userselect/{machineName}");
    }
}


