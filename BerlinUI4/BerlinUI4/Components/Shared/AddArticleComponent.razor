@* @rendermode InteractiveServer *@
@inject IGenericService<GenericArticle> genericArticleService
@inject NavigationManager navigationManager

<div class="accordion accordion-flush" id="accordionFlushExample">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-controls="flush-collapseOne">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg>
            </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                <tr>
                    <EditForm Model="newArticle" OnSubmit="NewArticleSubmit" FormName="AddNewArticle">
                        <td><InputText class="form-control-sm" @bind-Value="newArticle.Title" DisplayName="Title" /></td>
                        <td><InputText class="form-control-sm" @bind-Value="newArticle.Description" DisplayName="Descriere" /></td>
                        <td><InputNumber class="form-control-sm" @bind-Value="newArticle.Count" /></td>
                        <td><InputText class="form-control-sm" @bind-Value="newArticle.Location" DisplayName="Locatie" /></td>
                        <td><button type="submit" class="btn btn-primary">Add</button></td>
                    </EditForm>
                </tr>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private GenericArticle newArticle { get; set; } = new GenericArticle();

    async Task NewArticleSubmit()
    {
        await genericArticleService.Add(newArticle);
        navigationManager.NavigateTo("/articleslist");
    }
}
