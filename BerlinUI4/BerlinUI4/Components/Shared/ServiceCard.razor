<div class="col-md-4">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative" @onclick="() => OnServiceSelected.InvokeAsync(Service)">
        <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary-emphasis">Serviciu</strong>
            <h3 class="mb-0">@Service.Title</h3>
            <div class="mb-1 text-body-secondary">@Service.Price Lei</div>
            <p class="card-text mb-auto">@Service.Description</p>
        </div>
        <div class="col-auto d-none d-lg-block">
            <img src="@(string.IsNullOrEmpty(Service.ImageUrl) ? "reparatii_sistem_franare.jpg" : Service.ImageUrl)" alt="Thumbnail" width="200" height="100%" />
        </div>
    </div>
</div>
@code {

    [Parameter]
    public Service Service { get; set; }

    [Parameter]
    public EventCallback<Service> OnServiceSelected { get; set; }

}
